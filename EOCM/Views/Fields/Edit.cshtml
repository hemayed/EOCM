@model EOCM.Models.Field

@{
    ViewBag.Title = "تعديل بيانات النشاط";
}

<div style="font-family:Arial; text-align: center; direction: rtl; color:white">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Edit", "Fields", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Field_ID)

    <div class="form-horizontal" style="direction:rtl; background-color:white; position:center; width:800px; text-align:center; margin:auto; padding-bottom:2px;">
        <br />


        <div class="form-group">
            @Html.LabelFor(model => model.Field_Name, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Field_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Field_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sector_ID, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-5">
                @Html.DropDownList("Sector_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sector_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:large">
            <div class="col-md-offset-4 col-md-5">
                <input type="submit" value="حفظ التعديلات" class="btn btn-default" />
                <br /> <br />
                @Html.ActionLink("عودة للقائمة الرئيسية", "Index")
            </div>
        </div>
    </div>
}

